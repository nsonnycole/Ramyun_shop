  <nav>
    <ul class="sf-menu">
     <li><a href="/">Accueil</a></li>
     <li class="current"><a href="/menus">Menus</a></li>
     <li><a href="/menus"> Contact</a></li>
    <li><a href="/admin"> Administration</a></li>
   </ul>
  </nav>
