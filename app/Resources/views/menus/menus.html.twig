{% block body %}
<!--=====================
          Content
======================-->
<section class="content gallery pad1"><div class="ic">More Website Templates @ TemplateMonster.com - July 30, 2014!</div>

  <div class="container">
<a href="menus/ajoutMenu" style="margin-right:10px" class="btn" >Nouveau</a>
  <div class="grid_12">
    <div class="row">
      {% for plat in lesPlats %}
      <div class="grid_3">
        <div class="gall_block">
          <div class="maxheight">
              <a href= "{{ path('affichePlat', {'id': plat.id }) }} " class="gall_item"><img src="{{plat.image}}" alt=""></a>
            <div class="gall_bot">
            <div class="text1"><a href="{{ path('affichePlat', {'id': plat.id }) }} ">{{plat.titre}}</a></div>
              {{plat.description[:120]}}...
            <a href="{{ path('affichePlat', {'id': plat.id }) }} " class="btn">Plus</a></div>
              </div>
              </div>
          </div>
        {% endfor %}
    </div>
</div>

  </div>
</section>
{% endblock %}
